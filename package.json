{
  "name": "marketing-playground",
  "version": "1.0.0",
  "description": "Little marketing playground",
  "main": "dist/commonjs/analytics.js",
  "module": "dist/esm/analytics.js",
  "browser": "dist/umd/main.js",
  "types": "dist/commonjs/analytics.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "del ./dist ./.cache ./coverage ./.rpt2_cache",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json,md}'",
    "tslint": "tslint --project ./tsconfig.json --format codeFrame --force --fix",
    "lint": "run-s tslint prettier",
    "build": "run-s build:common",
    "build:common": "run-p clean lint && tsc",
    "build:esm": "tsc --module esnext --target es2015 --outDir ./dist/esm",
    "build:umd": "rollup -c rollup.config.ts",
    "build:all": "run-s build:common build:esm build:umd",
    "serve": "serve ."
  },
  "author": "Zoltan",
  "license": "MIT",
  "repository": {},
  "devDependencies": {
    "@types/jest": "^23.3.8",
    "@types/node": "^10.12.1",
    "del-cli": "^1.1.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rollup": "^0.66.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.2",
    "serve": "^10.0.2",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.4"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "testEnvironment": "node",
    "automock": false,
    "notify": true,
    "collectCoverage": true
  }
}
