{
  "name": "marketing-playground",
  "version": "1.0.0",
  "description": "Little marketing playground",
  "main": "dist/commonjs/analytics.js",
  "module": "dist/esm/analytics.js",
  "browser": "dist/umd/main.js",
  "types": "dist/commonjs/analytics.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "del ./dist ./.cache ./coverage ./.rpt2_cache",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "tslint": "tslint --project ./tsconfig.json --format codeFrame --force --fix",
    "tslint:test": "tslint --project ./tsconfig.test.json --format codeFrame --force --fix",
    "lint": "run-s tslint:test tslint prettier",
    "lint:ci": "tslint --project ./tsconfig.json --format codeFrame && tslint --project ./tsconfig.test.json --format codeFrame",
    "build": "run-p clean lint && tsc",
    "build:esm": "tsc --module esnext --target es2015 --outDir ./dist/esm",
    "build:amd": "tsc --module amd --outDir ./dist/amd",
    "build:umd": "rollup -c rollup.config.ts",
    "build:all": "run-s build build:esm build:amd build:umd",
    "serve": "serve .",
    "pretest": "run-s lint",
    "test": "npm run lint:ci && jest --detectOpenHandles --colors",
    "test:watch": "npm run test -- --watchAll"
  },
  "author": "Zoltan",
  "license": "MIT",
  "repository": {},
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.4",
    "del-cli": "^1.1.0",
    "jest": "^24.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rollup": "^1.4.1",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.19.3",
    "serve": "^10.1.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "tslib": "^1.9.3",
    "ts-jest": "^24.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "testEnvironment": "jsdom",
    "automock": false,
    "notify": true,
    "collectCoverage": true
  }
}
