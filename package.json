{
  "name": "marketing-playground",
  "version": "1.0.0",
  "description": "Little marketing playground",
  "main": "dist/commonjs/index.js",
  "module": "dist /esm/index.js",
  "browser": "dist/umd/index.js",
  "types": "dist/commonjs/index.d.ts",
  "esnext": {
    "main": "dist/esm/index.js",
    "browser": "dist/umd/index.js"
  },
  "files": [
    "./dist",
    "./vendor"
  ],
  "scripts": {
    "clean": "tsc -b . --clean && del ./dist ./.cache ./coverage ./.rpt2_cache",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "tslint": "tslint --project ./tsconfig.json --format codeFrame --force --fix",
    "tslint:test": "tslint --project ./tsconfig.test.json --format codeFrame --force --fix",
    "lint": "run-s tslint:test tslint prettier",
    "lint:ci": "tslint --project ./tsconfig.json --format codeFrame && tslint --project ./tsconfig.test.json --format codeFrame",
    "build": "run-p clean lint && tsc",
    "build:esm": "tsc --module esnext --target es2015 --outDir ./dist/esm",
    "build:amd": "tsc --module amd --outDir ./dist/amd",
    "build:umd": "rollup -c rollup.config.ts",
    "build:all": "run-s build build:esm build:amd build:umd",
    "serve": "serve .",
    "test": "yarn lint:ci && jest --detectLeaks --detectOpenHandles --forceExit --colors",
    "test:watch": "yarn test -- --watchAll",
    "test:acceptance:static:serve": "serve .",
    "test:acceptance:react:setup": "cd acceptance-tests/dummy-apps/react-app && yarn",
    "test:acceptance:react:serve": "cd acceptance-tests/dummy-apps/react-app && BROWSER=none yarn start",
    "test:acceptance:ember:test": "cd acceptance-tests/dummy-apps/ember-app && ember test"
  },
  "author": "Zoltan",
  "license": "MIT",
  "repository": {},
  "devDependencies": {
    "@types/expect-puppeteer": "^3.3.1",
    "@types/jest": "^24.0.12",
    "@types/jest-environment-puppeteer": "^4.0.0",
    "@types/node": "^11.13.8",
    "@types/puppeteer": "^1.12.3",
    "@types/rollup-plugin-commonjs": "^9.3.1",
    "@types/rollup-plugin-json": "^3.0.2",
    "@types/rollup-plugin-node-resolve": "^4.1.0",
    "@types/rollup-plugin-sourcemaps": "^0.4.2",
    "del-cli": "^1.1.0",
    "expect-puppeteer": "^4.1.1",
    "jest": "^24.7.1",
    "jest-environment-puppeteer": "^4.1.1",
    "jest-puppeteer": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "puppeteer": "^1.15.0",
    "rollup": "^1.10.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.0",
    "serve": "^11.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "weak": "^1.0.1"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "jest": {
    "preset": "jest-puppeteer",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "automock": false,
    "notify": true,
    "collectCoverage": true
  }
}
